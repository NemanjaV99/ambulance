{% extends 'layouts/layout.main.html.twig' %}

{% block page_content %}


    <div class="doctors-list">

        <h1 class="text-center mb-5">Doctors</h1>

        {% if notice is defined %}
          <div class="alert alert-success">{{ notice }}</div>
        {% elseif error is defined %}
          <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <table class="table">
            <thead>
                <tr>
                    <th scope='col'>ID</th>
                    <th scope='col'>First Name</th>
                    <th scope='col'>Last Name</th>
                    <th scope='col'>Username</th>
                    <th scope='col'>Type</th>
                    <th scope='col'>Actions</th>
                </tr>
            </thead>
            <tbody>

                {% for doctor in doctors %}

                    <tr>
                        <th scope='row'>{{ doctor.id }}</th>
                        <td>{{ doctor.first_name }}</td>
                        <td>{{ doctor.last_name }}</td>
                        <td>{{ doctor.username }}</td>
                        <td>{{ doctor.doctor_type }}</td>
                        <td data-controller="table-action">
                          <button data-patient={{ doctor.id }} data-table-action-target='deleteBtn' data-action="table-action#appendToDelete" class='button-link button-link--delete' data-bs-toggle='modal' data-bs-target='#deleteConfirmModal'><i class="far fa-trash-alt"></i></button>
                          <button class='button-link button-link--update'><i class="far fa-edit"></i></button>
                      </td>
                    </tr>

                {% endfor %}        

            </tbody>

        </table>
       
    </div>

     {# Modals #}
     <div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirm" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="deleteConfirmationTitle">Confirm deletion</h5>
              <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are you sure that you want to delete this doctor?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <form id="deleteForm" action="{{ path('admin_doctor_delete') }}" method="post">
                <button class="btn btn-primary" type="submit">Confirm</button>
              </form>
            </div>
          </div>
        </div>
     </div>
    

{% endblock %}